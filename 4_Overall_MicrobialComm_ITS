plot <- ps_venn(ASV_physeq, "compartment",
                fraction = 0,
                weight = T,
                relative = F,
                plot = T,
                edges= list(col = c("#E69F00", "#009E73"), lex = 1.5),
                fill = list(fill = c("#E69F00", "#009E73"), alpha = 0.5),
                labels = list(cex = 1),
                quantities = list(cex = 1, type = c("percent")),
                main = list(label = c("Prokaryotes"), cex = 1.5)
)

