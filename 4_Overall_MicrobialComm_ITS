               arrow=arrow(length = unit(0.03, "npc")), lwd=0.7) + 
  #geom_text(data=env.scores_rhizo, aes(x=PC1*DEF, y=PC2*DEF), label= row.names(env.scores_rhizo), nudge_y = 0.0007, size=4)  + 
  geom_text(data=env.scores_rhizo_cent, aes(x=mPC1*DEF, y=mPC2*DEF), label= c("Temperature **"), nudge_y = -0.5, nudge_x = -1.5, size=4)  + 
  #geom_text(data=env.scores_rhizo, aes(x=PC1*DEF, y=PC2*DEF), label= c("", "", "", "", expression("PO" ["4"] ^"3-"), ""), nudge_y = -0.5, size=4)  + 
  #geom_text(data=env.scores_rhizo, aes(x=PC1*DEF, y=PC2*DEF), label= c("", "", "", "pH", "", ""), nudge_x = 0.5, size=4)  + 
  #geom_text(data=env.scores_rhizo, aes(x=PC1*DEF, y=PC2*DEF), label= c("", "", "", "", "", "total N"), nudge_x = -0.9, size=4)  + 
  xlab("PCA 1 - 9.4%")+ 
