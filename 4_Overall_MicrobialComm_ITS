#Add statistics
#Want: lm or lme? div ~ temperature * precipitation * compartment, random = location probably
library(nlme)
library(car)
library(lme4)

#With both root and rhizo
head(adiv_ITS)
str(adiv_ITS)
adiv_ITS$location <- as.factor(adiv_ITS$location)
adiv_ITS$compartment <- as.factor(adiv_ITS$compartment)
adiv_ITS$temperature <- as.factor(adiv_ITS$temperature)
adiv_ITS$precipitation <- as.factor(adiv_ITS$precipitation)

#Simple lm
m1 <- lm(Observed ~ temperature * precipitation * compartment, data=adiv_ITS)
qqnorm(resid(m1))
plot(m1)
Anova(m1, type = 3)

m1 <- lm(Shannon ~ temperature * precipitation * compartment, data=adiv_ITS)
qqnorm(resid(m1))
plot(m1)
Anova(m1, type = 3)

#With random location
m1 <- lme(Observed ~ temperature * precipitation * compartment, random = ~1|location, data=adiv_ITS)
qqnorm(resid(m1))
plot(m1)
Anova(m1, type = 3)

m1 <- lme(Shannon ~ temperature * precipitation * compartment, random = ~1|location, data=adiv_ITS)
qqnorm(resid(m1))
plot(m1)
Anova(m1, type = 3)

#Emmeans
library(emmeans)
m1 <- lm(Shannon ~ temperature * precipitation * compartment, data=adiv_ITS) #Can only be done without random location effect
emmeans(m1, pairwise ~ temperature * compartment | precipitation)

m1 <- lm(Observed ~ temperature * precipitation * compartment, data=adiv_ITS) #Can only be done without random location effect
emmeans(m1, pairwise ~ temperature * compartment | precipitation)


